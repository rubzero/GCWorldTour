<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_main_slider"
    android:background="@color/colorBack2"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txt_title_slider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sv_end"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_slider_text"
        android:fontFamily="@font/kenyan"
        android:paddingTop="@dimen/title_pad" />

    <ImageView
        android:id="@+id/img_new_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_heigth" />

</LinearLayout>