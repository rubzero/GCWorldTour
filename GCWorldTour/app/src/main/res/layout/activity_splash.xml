<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animation_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/logo_minus_margin"
            app:lottie_rawRes="@raw/loading"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <TextView
            android:id="@+id/txt_title_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/app_title"
            android:layout_centerInParent="true"
            app:fontFamily="@font/kenyan_bold"
            android:textSize="@dimen/splash_title"/>

        <TextView
            android:id="@+id/txt_subTitle_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title_splash"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/subtitle_minus_margin"
            android:text="@string/app_subtittle"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/splash_subtitle"
            app:fontFamily="@font/kenyan" />

</RelativeLayout>