<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/ll_carditem_card"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="@dimen/card_item_heigth"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_carditem_card"
            android:layout_width="@dimen/card_item_image"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_date_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/grid_text"
            android:textColor="@color/colorWhite" />

    </LinearLayout>